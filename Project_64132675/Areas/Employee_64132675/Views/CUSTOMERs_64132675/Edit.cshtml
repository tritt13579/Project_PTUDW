@model Project_64132675.Models.CUSTOMER

@{
    ViewBag.Title = "Chỉnh sửa thông tin khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-2">CHỈNH SỬA THÔNG TIN KHÁCH HÀNG</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal p-4 border rounded bg-light">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <!-- Customer ID -->
            @Html.HiddenFor(model => model.CUSTOMER_ID)
            <div class="form-group row mb-3">
                <label class="col-md-3 col-form-label">
                    <strong>Mã khách hàng:</strong>
                </label>
                <div class="col-md-6 ms-2">
                    @Html.DisplayFor(model => model.CUSTOMER_ID, new { @class = "form-control" })
                </div>
            </div>

            <!-- Last Name -->
            <div class="form-group row mb-3">
                <label class="col-md-3 col-form-label">
                    <strong>Họ:</strong>
                </label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.LAST_NAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LAST_NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- First Name -->
            <div class="form-group row mb-3">
                <label class="col-md-3 col-form-label">
                    <strong>Tên:</strong>
                </label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.FIRST_NAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FIRST_NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Gender -->
            <div class="form-group row mb-3">
                <label class="col-md-3 col-form-label">
                    <strong>Giới tính:</strong>
                </label>
                <div class="col-md-6">
                    @Html.DropDownList("GENDER", new List<SelectListItem> {
                        new SelectListItem { Text = "Nam", Value = "M" },
                        new SelectListItem { Text = "Nữ", Value = "F" },
                        new SelectListItem { Text = "Khác", Value = "O" }
                    }, "Chọn giới tính", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GENDER, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Date of Birth -->
            <div class="form-group row mb-3">
                <label class="col-md-3 col-form-label">
                    <strong>Ngày sinh:</strong>
                </label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.DATE_OF_BIRTH, new { htmlAttributes = new { @class = "form-control", type = "date", @Value = Model.DATE_OF_BIRTH.ToString("yyyy-MM-dd") } })
                    @Html.ValidationMessageFor(model => model.DATE_OF_BIRTH, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Email -->
            <div class="form-group row mb-3">
                <label class="col-md-3 col-form-label">
                    <strong>Email:</strong>
                </label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Phone Number -->
            <div class="form-group row mb-3">
                <label class="col-md-3 col-form-label">
                    <strong>Số điện thoại:</strong>
                </label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.PHONE_NUMBER, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PHONE_NUMBER, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Password -->
            <div class="form-group row mb-3 d-none">
                <label class="col-md-3 col-form-label">
                    <strong>Mật khẩu:</strong>
                </label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-warning" />
                    <a href="@Url.Action("Index")" class="btn btn-primary">Quay lại</a>
                </div>
            </div>
        </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
