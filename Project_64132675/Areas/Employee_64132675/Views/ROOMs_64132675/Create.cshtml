@model Project_64132675.Models.ROOM

@{
    ViewBag.Title = "Thêm phòng";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-2">THÊM PHÒNG MỚI</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal p-4 border rounded bg-light">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Floor -->
                    <div class="form-group row mb-3">
                        <label class="col-md-3 col-form-label">
                            <strong>Tầng:</strong>
                        </label>
                        <div class="col-md-6">
                            @Html.DropDownList("FLOOR_ID", null, "Chọn tầng", new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.FLOOR_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Room Class -->
                    <div class="form-group row mb-3">
                        <label class="col-md-3 col-form-label">
                            <strong>Loại phòng:</strong>
                        </label>
                        <div class="col-md-6">
                            @Html.DropDownList("ROOM_CLASS_ID", null, "Chọn loại phòng", new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.ROOM_CLASS_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-md-3 col-form-label">
                            <strong>Loại giường:</strong>
                        </label>
                        <div class="col-md-6">
                            @Html.DropDownListFor(
                                model => model.BED_TYPE,
                                new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "Giường đơn", Value = "Giường đơn" },
                                    new SelectListItem { Text = "Giường đôi", Value = "Giường đôi" },
                                    new SelectListItem { Text = "Giường Queen size", Value = "Giường Queen size" },
                                    new SelectListItem { Text = "Giường King size", Value = "Giường King size" },
                                    new SelectListItem { Text = "Giường Super King size", Value = "Giường Super King size" }
                                },
                                "Chọn loại giường",
                                new { @class = "form-select" }
                            )
                            @Html.ValidationMessageFor(model => model.BED_TYPE, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Number of Beds -->
                    <div class="form-group row mb-3">
                        <label class="col-md-3 col-form-label">
                            <strong>Số lượng giường:</strong>
                        </label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.NUM_BEDS, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NUM_BEDS, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Room Number -->
                    <div class="form-group row mb-3">
                        <label class="col-md-3 col-form-label">
                            <strong>Số phòng:</strong>
                        </label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.ROOM_NUMBER, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ROOM_NUMBER, "", new { @class = "text-danger" })
                        </div>
                    </div>

                     <!-- Room Status -->
                     @Html.HiddenFor(model => model.ROOM_STATUS_ID, new { Value = "1" })

                    <!-- Submit and Cancel -->
                    <div class="form-group row">
                        <div class="col-md-6 offset-md-3">
                            <input type="submit" value="Thêm phòng" class="btn btn-success me-2" />
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
