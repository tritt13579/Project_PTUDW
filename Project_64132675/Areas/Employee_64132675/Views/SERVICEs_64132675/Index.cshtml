@model IEnumerable<Project_64132675.Models.SERVICE>

@{
    ViewBag.Title = "Quản lý dịch vụ";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="container-fluid px-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary table-title">Danh sách dịch vụ</h6>
            <a href="@Url.Action("Create")" class="btn create-btn btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Thêm dịch vụ mới</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="serviceTable" class="table table-striped table-bordered" style="width:100%">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-center">Mã dịch vụ</th>
                            <th class="text-center">Tên dịch vụ</th>
                            <th class="text-center">Giá</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.SERVICE_ID</td>
                                <td class="text-center">@item.SERVICE_NAME</td>
                                <td class="text-center">@item.PRICE.ToString("C0")</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.SERVICE_ID })" class="btn btn-edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.SERVICE_ID })" class="btn btn-details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.SERVICE_ID })" class="btn btn-delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script>
        $(document).ready(function () {
            $('#serviceTable').DataTable({
                "pageLength": 5,
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Tất cả"]],
                "pagingType": "full_numbers",
                "language": {
                    "search": "Tìm kiếm dịch vụ:",
                    "responsive": true,
                    "stateSave": true,
                    "lengthMenu": "Hiển thị _MENU_ dịch vụ mỗi trang",
                    "zeroRecords": "Không tìm thấy dịch vụ nào",
                    "info": "Hiển thị trang _PAGE_ trên _PAGES_",
                    "infoEmpty": "Không có dữ liệu",
                    "infoFiltered": "(lọc từ tổng số _MAX_ bản ghi)",
                    "paginate": {
                        "first": "<<",
                        "previous": "<",
                        "next": ">",
                        "last": ">>"
                    }
                },
                "columnDefs": [{
                    "targets": 3,
                    "orderable": false,
                    "width": "100px"
                }]
            });
        });
    </script>
}
