@model Project_64132675.Models.SERVICE

@{
    ViewBag.Title = "Xóa dịch vụ";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-3">XÁC NHẬN XÓA DỊCH VỤ</h2>
            <div class="form-horizontal p-4 border rounded bg-light">
                <div class="form-group row mb-3">
                    <label class="col-md-3 col-form-label">
                        <strong>Mã dịch vụ:</strong>
                    </label>
                    <div class="col-md-6">
                        <p class="form-control-plaintext">@Model.SERVICE_ID</p>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-md-3 col-form-label">
                        <strong>Tên dịch vụ:</strong>
                    </label>
                    <div class="col-md-6">
                        <p class="form-control-plaintext">@Model.SERVICE_NAME</p>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-md-3 col-form-label">
                        <strong>Giá dịch vụ:</strong>
                    </label>
                    <div class="col-md-6">
                        <p class="form-control-plaintext">@(Model.PRICE.ToString("C0"))</p>
                    </div>
                </div>

                <!-- Confirmation -->
                <div class="alert alert-warning text-center mt-4">
                    <strong>Bạn có chắc chắn muốn xóa dịch vụ này? Thao tác này không thể hoàn tác!</strong>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group row">
                        <div class="col-md-6 offset-md-3 text-center">
                            <input type="submit" value="Xóa" class="btn btn-danger me-2" />
                            @Html.ActionLink("Hủy bỏ", "Index", new { area = "Employee_64132675" }, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
