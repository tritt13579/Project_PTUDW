@model IEnumerable<Project_64132675.Models.SERVICE>

<div class="row room-listing">
    @if (Model != null && Model.Any())
    {
        foreach (var service in Model)
        {
            <div class="col-md-4 pb-3">
                <div class="card h-100">
                    <img src="@Url.Content($"~/Public/Images/dv{service.SERVICE_ID}.jpg")" 
                         class="card-img-top custom-card-img"
                         alt="@service.SERVICE_NAME"
                         onerror="this.src='@Url.Content("~/Public/Images/default.jpg")'" />
                    <div class="card-body">
                        <h5 class="card-title">@service.SERVICE_NAME</h5>
                        <p class="card-text text-muted">Per adult/stay</p>
                        <a href="#" class="text-primary text-decoration-none">See details</a>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h5 mb-0">@service.PRICE.ToString("#,##0") ₫</span>
                            <button class="btn btn-primary"
                                    onclick="addService(@service.SERVICE_ID)">
                                Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p class="text-center">No services available.</p>
        </div>
    }
</div>