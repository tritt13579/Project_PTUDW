@model Project_64132675.ViewModels.LoginViewModel_6132675

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đăng nhập</h2>

@using (Html.BeginForm("Login", "Auth_64132675", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    @* Hiển thị lỗi chung nếu có *@
    if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(""))
    {
        <div class="alert alert-danger">
            @ViewData.ModelState[""].Errors[0].ErrorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary">Đăng nhập</button>
}



