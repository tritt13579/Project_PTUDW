@model Project_64132675.ViewModels.LoginViewModel_64132675

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="container-fluid vh-100">
    <div class="row h-100">
        <!-- Cột form đăng nhập bên trái -->
        <div class="col-md-6 d-flex justify-content-center align-items-center p-4">
            <div class="w-100" style="max-width: 400px;">
                <!-- Logo -->
                <div class="text-center mb-4">
                    <img src="~/Public/Images/logo_login.svg" alt="Logo" class="img-fluid" style="max-width: 120px;">
                </div>

                <!-- Tiêu đề đăng nhập -->
                <h4 class="mb-4 text-center font-weight-bold">Đăng nhập</h4>

                <!-- Hiển thị lỗi nếu có -->
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        @ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @using (Html.BeginForm("Login", "Auth_64132675", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <!-- Email -->
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email của bạn", autofocus = "autofocus" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <!-- Mật khẩu -->
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <!-- Quên mật khẩu -->
                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            <a class="text-decoration-none" href="@Url.Action("ForgotPassword", "Auth_64132675")">Quên mật khẩu?</a>
                        </div>
                    </div>

                    <!-- Đăng nhập -->
                    <button type="submit" class="btn btn-primary w-100 mb-3 py-2 rounded-pill">Đăng nhập</button>

                    <!-- Liên kết tạo tài khoản mới -->
                    <div class="text-center">
                        <p class="mb-2 text-muted">
                            Bạn chưa có tài khoản? <a class="text-decoration-none" href="@Url.Action("Register", "Auth_64132675")">Tạo tài khoản ngay</a>
                        </p>
                    </div>
                }
            </div>
        </div>
        <!-- Cột hình ảnh bên phải-->
        <div class="col-md-6 p-0 d-none d-md-block">
            <img src="~/Public/Images/login_bg.jpg" alt="bg" class="img-fluid h-100 w-100 object-fit-cover" />
        </div>
    </div>
</div>
